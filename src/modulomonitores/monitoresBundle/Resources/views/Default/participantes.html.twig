{% extends 'modulomonitoresmonitoresBundle::main.html.twig' %}

{% block title %} Participantes {% endblock %}
{% block contenido %}
    <div class="container">
        <div class="page-header">
            <h1 class="t1">Listado de participantes</h1>
        </div>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>{{ knp_pagination_sortable(pagination, 'Nombre del cliente', 'pagination.nombre') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Número de teléfono', 'pagination.telefono') }}</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    {% for cliente in pagination %}
                        <tr data-id="{{ cliente.id }}">
                            <td>{{cliente.nombre}}</td>
                            <td>{{cliente.telefono}}</td>
                            <td class="actions">
                                <a href="{{url('modulomonitores_monitores_participante', {'id': cliente.id})}}" class="btn btn-sm btn-info">
                                    Ver más información
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>

{% endblock %}

