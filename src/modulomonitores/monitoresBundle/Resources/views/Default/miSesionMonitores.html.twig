{% extends 'modulomonitoresmonitoresBundle::main.html.twig' %}
{% block title %}Vista de {{sesion.nombre}} {% endblock %}
{% block contenido %}
    <h1 class="t1">Sesion {{sesion.id}}</h1>
    <h3 class="t1">{{sesion.nombre}}</h3>    

    <div id="sesiondat">
        <div id="sesionfot" style="margin-top: 14px;">
            <img src="{{ asset(sesion.imagen) }}" class="img-responsive center-block" style="width: 50%; margin-bottom: 1%" />        
        </div>

        {% if sesion.estado == "validada" %}
            <div class="accionesesion text-center">
                <a href="{{path('modulomonitores_monitores_solEliminarSesion', {id: sesion.id})}}" style="height: 30px; width: 600px;" class="btn btn-danger">Solicitar eliminar sesion</a> 
            </div>
            <div class="row">
                <div id="colizq" class="col-md-4 col-md-offset-3" >
                    <h4>Aula:</h4> <p>{{aula.nombre}}</p>
                </div>
                <div id="colder" class="col-md-4">
                    <h4>Horario:</h4> <a href="{{path('modulomonitores_monitores_verHorario', {id: sesion.id})}}" style="height: 30px; width: 100px;" class="btn btn-primary">Ver Horario</a>
                </div>
            </div>
        {% elseif sesion.estado == "solEliminar" %}
            <div class="text-center">
                <button style="height: 30px; width: 600px;" class="btn btn-danger" disabled="disabled">Solicitud de eliminacion enviada</button>
                <h4>Motivos:</h4> <p>{{sesion.motivos}}</p>
            </div>    
        {% elseif sesion.estado == "cancelada" %}
            <div class="text-center">
                <a href="{{path('modulomonitores_monitores_abandonarSesion', {id: sesion.id})}}" style="height: 30px; width: 250px;" class="btn btn-danger">Abandonar</a>
                <h4>Motivos:</h4> <p>{{sesion.observaciones}}</p>
            </div>
        {% elseif sesion.estado == "rechazada" %}
            <div class="text-center">
                <a href="{{path('modulomonitores_monitores_editarSesion', {id: sesion.id})}}" style="height: 30px; width: 250px;" class="btn btn-primary">Modificar sesion</a> 
                {{ include('modulomonitoresmonitoresBundle:Default:forms/form.html.twig', { form: delete_form })}}

                <h4>Motivos:</h4> <p>{{sesion.observaciones}}</p>
            </div>
        {% else %}
            <div class="text-center">
                <button style="height: 30px; width: 600px;" class="btn btn-warning" disabled="disabled">pendiente</button>
            </div>
        {% endif %}

        <div class="row">
            <div id="colizq" class="col-md-4 col-md-offset-3" >
                <h4>Monitor:</h4> <p>{{sesion.monitor}}</p>
                <h4>Ejercicios:</h4> <p>{{sesion.ejercicios}}</p>
                <h4>Repeticiones:</h4> <p>{{sesion.repeticiones}} por ejercicio</p>
                <h4>LÃ­mite de participantes:</h4> <p>{{sesion.lClientes}}</p>

            </div>
            <div id="colder" class="col-md-4">
                <h4>Tiempo estimado:</h4> <p>{{sesion.duracion}} minutos</p>
                <h4>Descanso entre ejercicios:</h4> <p>{{sesion.descanso}} minutos</p>
                <h4>Objetivo:</h4> <p>{{sesion.objetivo}}</p>
                {% if sesion.nClientes > 0 %}
                    <h4>Participantes:</h4> 
                    <a href="{{path('modulomonitores_monitores_verParticipantes', {id: sesion.id})}}" style="height: 30px; width: 130px;" class="btn btn-primary">Ver participantes</a>
                {% endif %}
            </div>

        </div>
    </div>

{% endblock %}