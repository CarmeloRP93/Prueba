{% extends '::base.html.twig' %}
{% block title %} Vista desde main {% endblock %}
{% block stylesheets %}
    <link href="{{ asset('css/main.css') }}" type="text/css" rel="stylesheet">
{% endblock %}

{% block header %}
 
{% endblock %}

{% block navegation %}
