{% extends 'modulomonitoresmonitoresBundle::main.html.twig' %}
{% block title %}Suspender sesión privada{% endblock %}
{% block contenido %}
    <div class="container text-center">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
                <div class="panel panel-default text-center">
                    <div class="panel-heading">
                        <h1 class="t1">Suspender sesión privada</h1>
                    </div>

                    {{ form_start(form, { 'attr' : {'novalidate' : 'novalidate', 'role' : 'form'} }) }}

                    <div class="panel-body">  
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                {{ form_label(form.observaciones) }}
                                {{ form_widget(form.observaciones, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Escriba los motivos de suspensión...'} }) }}
                                <span class="text-danger">{{ form_errors(form.observaciones) }}</span>
                            </div>
                        </div><br>

                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                {{ form_widget(form.confirmar, {'label' : 'Confirmar', 'attr': {'class': 'btn btn-success'}}) }}
                            </div>                

                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                <a href="{{ path("modulomonitores_monitores_miSesionDedicada", {id: sesion.id}) }}" class="btn btn-danger">Cancelar</a>
                            </div>                
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}