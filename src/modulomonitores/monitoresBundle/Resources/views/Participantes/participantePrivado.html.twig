{% extends 'modulomonitoresmonitoresBundle::main.html.twig' %}
{% block title %} Cliente {{cliente.nombre}} {% endblock %}
{% block contenido %}
    <div class="container text-center">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <div class="panel panel-default text-center">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                            <img src="{{ asset('images/'~cliente.imagen) }}" class="img-circle" style="width:60px;" />        
                        </div>
                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                            <h3 style="font-weight: 600">{{ cliente.username }}</h3>
                        </div>
                    </div>
                </div>
                <div class="panel-body">  

                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            <h4>Correo electrónico </h4> <p>{{cliente.email}}</p>
                            <h4>Fecha nacimiento </h4> <p>{{cliente.fNacimiento}}</p>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            <h4>Teléfono </h4> <p>{{cliente.telefono}}</p>
                            <h4>Nombe y apellidos </h4> <p>{{cliente.nombre}}</p>
                    </div>
                    <div>
                        <form style="margin-right: -3px" action="{{ path('modulomonitores_monitores_sesionesParticipante', { id: cliente.id }) }}" method="post" class="alinear btn-group">
                            <button type="submit" class="btn btn-success">Ver sesiones</button>
                            <input type="hidden" class="btn">
                        </form>
                        <form style="margin-left: -3px; margin-top: -10px" action="{{ path('modulomonitores_monitores_enviarMensajeCliente', { id : cliente.id } ) }}" method="post" class="alinear btn-group">
                            <input type="hidden" class="btn">
                            <button type="submit" class="btn btn-default">Enviar mensaje</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
            <a href="{{'http://localhost/Prueba/web/app_dev.php/miSesionDedicada/'~idSesion}}" class="btn btn-default">Volver atrás</a>
    </div>
{% endblock %}