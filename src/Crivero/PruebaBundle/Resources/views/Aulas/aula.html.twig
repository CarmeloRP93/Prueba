{% extends 'CriveroPruebaBundle::main.html.twig' %}
{% block title %} {{aula.nombre}} {% endblock %}
{% block contenido %}
    {{ include('CriveroPruebaBundle:Default:messages/success.html.twig') }}
    <div class="container">

        <div class="page-header text-center">
            <h2 class="t1">{{aula.nombre}}</h2>
        </div>

        <div class="col-md-5 col-xs-12">
            <img src="{{ asset('images/' ~ aula.imagen) }}" style="width:400px; margin-bottom: 2px"  class="img-rounded"/><br>
            {% if aula.disponibilidad == "Disponible" %}
                <button style="width:400px;" class="btn btn-success active" >{{aula.disponibilidad}}</button>
            {% else %}
                <button style="width:400px;" class="btn btn-danger active">{{aula.disponibilidad}}</button>
            {% endif %}
        </div>

        <div class="col-xs-12 col-sm-8 col-md-6">
            <div class="panel panel-default text-center">
                <div class="panel-body">

                    <div class="col-md-6 col-xs-12">
                        <div class="text-center">
                            <h4>Disponibilidad </h4>
                            <p>{{aula.horario}} </p>
                            <h4>Tamaño </h4>
                            <p>{{aula.dimensiones ~ 'm²'}} </p>
                            <h4>Descripción </h4>
                            <p>{{ aula.descripcion }} </p>


                        </div>
                    </div>
                    <div  class="col-xs-12 col-sm-6 col-md-6 col-lg-6 ">
                        <h4>Sesiones </h4> 
                        <div>
                            {% if aula.sesiones != null %}
                                <ul>
                                    {% set i = 0 %}
                                    {% for sesion in sesiones if i < 3 %}
                                        {% set i = i+1 %}
                                        <li style="list-style: none">
                                            <p>{{ sesion.nombre }} - {{sesion.monitor|capitalize}}
                                                <a style="margin-bottom: 0; padding: 1px 1px; line-height: 0;" class="btn btn-xs btn-primary" href="{{path('crivero_prueba_horarios_sesion', { id: sesion.id })}}">
                                                    <img src="{{ asset("images/clock.png") }}" style="width: 13px" />
                                                </a>
                                            </p>
                                        </li>
                                    {% endfor %}
                                </ul>
                                <form action="{{ path('crivero_prueba_sesiones_aula', { id: aula.id }) }}" method="post" class="form-signin">
                                    <button type="submit" class="btn btn-sm btn-outline-success">Ver sesiones</button>
                                </form>
                            </div>
                        {% else %}
                            <p style="color: red"><strong>Sin sesiones asignadas.</strong></p>
                        {% endif %}<br>
                        {{ include('CriveroPruebaBundle:Default:forms/form.html.twig', { form: delete_form, nombre: "Eliminar aula" })}}
                    </div>
                    <div class="col-md-12 col-xs-12" style="margin-top: 14px">
                        <form style="margin-right: -3px" action="#" method="post" class="alinear btn-group">
                            <button type="submit" class="btn btn-primary">Disponibilidad</button>
                            <input type="hidden" class="btn">
                        </form>
                        <form style="" action="{{ path('crivero_prueba_aula_editar', { id: aula.id }) }}" method="post" class="alinear btn-group">
                            <input type="hidden" class="btn">
                            <button type="submit" class="btn btn-warning">Modificar aula</button>
                        </form>
                    </div>


                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        function confirmarEliminar() {
            bootbox.confirm('¿Estas seguro?', function (result) {
                if (result === true) {
                    document.getElementById("form").submit();
                }
            });
        }
    </script>
{% endblock %}