{% extends 'CriveroPruebaBundle::main.html.twig' %}

{% block title %} Vista de Equipos {% endblock %}

{% block contenido %}
<div id="buscador">
    <form>
        <input type="search" name="equipo" placeholder="Buscar equipo"/>
    </form>
</div>
<h1>Listado de Equipos</h1>
    <h3>Fútbol</h3>
    {% for equipo in equipos %}
        {%if equipo.deporte =='Fútbol'%}
            <a href="{{url('crivero_prueba_equipo', {'id': equipo.id})}}" class="fila {{cycle(["par","impar"], loop.index)}}">Clasificación: {{equipo.clasificacion}}º-Nombre del equipo:{{ equipo.nombre }}</a>
        {%endif%}
    {% endfor %}
    <h3>Baloncesto</h3>
    {% for equipo in equipos %}
        {%if equipo.deporte =='Baloncesto'%}
            <a href="{{url('crivero_prueba_equipo', {'id': equipo.id})}}" class="fila {{cycle(["par","impar"], loop.index)}}">Clasificación: {{equipo.clasificacion}}º-Nombre del equipo:{{ equipo.nombre }}</a>
        {%endif%}
    {% endfor %}
{% endblock %}