{% extends 'CriveroPruebaBundle::main.html.twig' %}
{% block title %} {{aula.nombre}} {% endblock %}
{% block contenido %}
    {{ include('CriveroPruebaBundle:Default:messages/success.html.twig') }}
    <div class="container text-center">
        <h3>Detalles de Aula</h3>
    </div>

    <div class="text-center">
        <h4>{{aula.nombre}}</h4>
    </div>

    <div class="col-md-6 col-xs-12">

        <div class="text-center">
            <img src="{{ asset('images/' ~ aula.imagen) }}" style="width:250px; height: 150px; margin-bottom: 2px"  class="img-rounded"/><br>

           {% if aula.disponibilidad == "Disponible" %}
            <div class="text-center">
                <button style="width:250px;" class="btn btn-success active" >{{aula.disponibilidad}}</button>
            </div>
            {% else %}
                <div class="text-center">
                    <button style="width:250px;" class="btn btn-danger active">{{aula.disponibilidad}}</button>
                </div>
                {% endif %}
                </div><br>

            </div>

            <div class="col-md-6 col-xs-12">
                <div class="text-center">
                    <h4>Horario: </h4>
                    <p>{{aula.horario}} </p>
                    <h4>Tamaño: </h4>
                    <p>{{aula.dimensiones ~ 'm²'}} </p>
                    <h4>Descripción: </h4>
                    <p>{{ aula.descripcion }} </p>

                    {% if aula.sesiones != null %}
                        <div>
                            <h4>Sesiones: </h4> 
                            {% for sesion in sesiones %}
                                <p>{{ sesion.nombre }} con {{sesion.monitor}} - {{sesion.horario}} </p>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <div class="text-center">
                    <a href="{{ path('crivero_prueba_aula_editar', { id: aula.id }) }}" class="btn btn btn-primary">
                        Editar info
                    </a>
                    {{ include('CriveroPruebaBundle:Default:forms/form.html.twig', { form: delete_form, nombre: "Eliminar aula" })}}
                 </div>

            </div>
{% endblock %}