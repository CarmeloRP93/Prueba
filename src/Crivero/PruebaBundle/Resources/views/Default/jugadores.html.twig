{% extends 'CriveroPruebaBundle::main.html.twig' %}

{% block title %} Vista de Jugadores {% endblock %}

{% block contenido %}
<div id="buscador">
    <form>
        <input type="search" name="equipo" placeholder="Buscar jugador"/>
    </form>
</div>
<h1>Listado de Jugadores</h1>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>1ยบ Apellido</th>
                    <th>2ยบ Apellido</th>
                    <th>Dorsal</th>
                    <th>Incidencia</th>
                </tr>
            </thead>
            <tbody>
                {% for jugador in jugadores %}
                    <tr>
                        <td>{{jugador.nombre}}</td>
                        <td>{{jugador.primerApellido}}</td>
                        <td>{{jugador.segundoApellido}}</td>
                        <td>{{jugador.dorsal}}</td>
                        <td class="actions">
                            <a href="{{ path('crivero_prueba_jugador', { id: jugador.id }) }}" class="btn btn-sm btn-info">
                                Ver
                            </a>
                            {#<a href="{{ path('crivero_prueba_editarJugador', { id: competicion.id }) }}" class="btn btn-sm btn-primary">
                                Editar
                            </a>#}
                            <a href="#" class="btn btn-sm btn-danger btn-delete">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}