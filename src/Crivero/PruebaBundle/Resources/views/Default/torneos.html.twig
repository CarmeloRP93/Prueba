{% extends 'CriveroPruebaBundle::main.html.twig' %}

{% block title %} Torneos {% endblock %}

{% block contenido %}
    <div class="container">
        <h1 class="text-center">Torneos</h1>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Deporte</th>
                        <th>Estado Torneo</th>
                        <th>Fecha inicio</th>
                        <th>Fecha finalizaci√≥n</th>
                    </tr>
                </thead>
                <tbody>
                    {% for torneo in torneos %}
                        <tr>
                            <td>{{torneo.nombre}}</td>
                            <td>{{torneo.deporte}}</td>
                            <td>{{torneo.estadoTorneo}}</td>
                            <td>{{torneo.fechaInicio|date('d/m/Y H:i')}}</td>
                            <td>{{torneo.fechaFinalizacion|date('d/m/Y H:i')}}</td>
                            <td class="actions">
                                <a href="{{ path('crivero_prueba_torneo', { id: torneo.id }) }}" class="btn btn-sm btn-info">
                                    Ver
                                </a>
                                {#<a href="{{ path('crivero_prueba_editarTorneo', { id: torneo.id }) }}" class="btn btn-sm btn-primary">
                                    Editar
                                </a>#}
                                <a href="#" class="btn btn-sm btn-danger btn-delete">
                                    Eliminar
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
