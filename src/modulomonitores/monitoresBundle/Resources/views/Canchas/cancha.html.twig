{% extends 'modulomonitoresmonitoresBundle::main.html.twig' %}
{% block title %} {{cancha.tipo}} {% endblock %}
{% block contenido %}
    <div class="container text-center">
        <h1 class="t1 page-header">Cancha {{cancha.tipo}}</h1><br>

        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <img src="{{ asset('images/'~cancha.imagen) }}" class="img-responsive center-block" style="max-width: 340px; margin-bottom:5px"/>
                {% if cancha.disponibilidad == "Disponible" %}
                    <button class="btn btn-success active" style="width: 340px">
                        {{cancha.disponibilidad}} 
                    </button>
                {% else %}
                    <button class="btn btn-danger active" style="width: 340px">{{cancha.disponibilidad}}</button>
                {% endif %}
            </div>


            <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-0 col-md-5 col-md-offset-0 col-lg-5 col-lg-offset-0"> 
                <div class="panel panel-default">                  
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                <h4>Horario </h4> <p>{{cancha.horario}}</p>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                <h4>Deporte </h4><p>{{cancha.deporte}}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                <h4>Dimensiones </h4><p>{{cancha.dimensiones}} m²</p>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                <h4>Dirección </h4><p>{{cancha.direccion}}</p>
                            </div>
                        </div>
                    </div>
                    <div class="" style="margin-bottom: 10px;margin-top: 10px">
                        {% if cancha.disponibilidad == 'Disponible'%}
                            <form style="margin-right: -4px" action="{{ path('modulomonitores_monitores_canchaDisponibilidad', { id: cancha.id }) }}" method="post" class="alinear btn-group">
                                <button type="submit" class="btn btn-primary">Disponibilidad</button>
                                <input type="hidden" class="btn">
                            </form>
                        {% else %}
                            <button disabled="disabled" type="submit" style="margin-bottom: 1px" class="btn btn-primary">Disponibilidad</button>
                        {% endif %}
                        <form class="btn-group-vertical" action="{{ path('modulomonitores_monitores_sesionesCancha', { id: cancha.id }) }}" method="post" class="alinear btn-group">
                            <button type="submit" style="margin-top: -1px" class="btn btn-info">Ver sesiones</button>
                            <input type="hidden" class="btn">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}