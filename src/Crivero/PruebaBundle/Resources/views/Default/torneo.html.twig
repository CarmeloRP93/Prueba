            <button class="btn btn-default">Aceptar Solicitud</button>
            <button class="btn btn-danger">Rechazar Solicitud </button>
        {% endif %}
        {% block detalles %}
            {% if torneo.estadoTorneo == "Validado" %}
                <h3>Ver informaci√≥n de equipos</h3>
                <p>{{torneo.equipos}}<p>
