{% extends 'CriveroPruebaBundle::main.html.twig' %}
{% block title %} {{aula.nombre}} {% endblock %}
{% block contenido %}
    {{ include('CriveroPruebaBundle:Default:messages/success.html.twig') }}
    <div class="container text-center">
        <div class="page-header">
            <h1 class="t1">{{aula.nombre}}</h1>
        </div>

        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <img src="{{ asset('images/' ~ aula.imagen) }}" class="img-responsive center-block" style="max-width: 340px; margin-bottom:20px"/>
                {% if aula.disponibilidad == "Disponible" %}
                    <button style="width:340px;" class="btn btn-success active" >{{aula.disponibilidad}}</button>
                {% else %}
                    <button style="width:340px;" class="btn btn-danger active">{{aula.disponibilidad}}</button>
                {% endif %}
            </div>

            <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-0 col-md-6 col-md-offset-0 col-lg-6 col-lg-offset-0"> 
                <div class="panel panel-default">                  
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-6 col-sm-4 col-md-4 col-lg-4">
                                <h4>Disponibilidad </h4><p>{{aula.horario}} </p>
                            </div>
                            <div class="col-xs-6 col-sm-4 col-md-4 col-lg-4">
                                <h4>Tamaño </h4><p>{{aula.dimensiones ~ 'm²'}} </p>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                                <h4>Descripción </h4><p>{{ aula.descripcion }} </p>
                            </div>
                        </div>
                        <div  class="row">
                            <h4>Sesiones </h4> 
                            {% if aula.sesiones != null %}
                                <ul>
                                    {% set i = 0 %}
                                    {% for sesion in sesiones if i < 3 %}
                                        {% set i = i+1 %}
                                        <li style="list-style: none">
                                            <p>{{ sesion.nombre }} - {{sesion.monitor|capitalize}}
                                                <a style="margin-bottom: 0; padding: 1px 1px; line-height: 0;" class="btn btn-xs btn-primary" href="{{path('crivero_prueba_horarios_sesion', { id: sesion.id })}}">
                                                    <img src="{{ asset("images/clock.png") }}" style="width: 13px" />
                                                </a>
                                            </p>
                                        </li>
                                    {% endfor %}
                                </ul>
                                <form action="{{ path('crivero_prueba_sesiones_aula', { id: aula.id }) }}" method="post" class="form-signin">
                                    <button type="submit" class="btn btn-sm btn-outline-success">Ver sesiones</button>
                                </form>
                            {% else %}
                                <p style="color: red"><strong>Sin sesiones asignadas.</strong></p>
                            {% endif %}
                        </div><br>
                        <div  class="row">
                            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                                <form action="#" method="post" class="alinear btn-group">
                                    <button type="submit" class="btn btn-primary">Disponibilidad</button>
                                    <input type="hidden" class="btn">
                                </form>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                                <form action="{{ path('crivero_prueba_aula_editar', { id: aula.id }) }}" method="post" class="alinear btn-group">
                                    <input type="hidden" class="btn">
                                    <button type="submit" class="btn btn-warning">Modificar aula</button>
                                </form>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                                {{ include('CriveroPruebaBundle:Default:forms/form.html.twig', { form: delete_form, nombre: "Eliminar aula" })}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        function confirmarEliminar() {
            bootbox.confirm('¿Estas seguro?', function (result) {
                if (result === true) {
                    document.getElementById("form").submit();
                }
            });
        }
    </script>
{% endblock %}